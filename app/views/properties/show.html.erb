<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>
<p>
  <strong>賃料:</strong>
  <%= @property.price %>
</p>
<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>
<p>
  <strong>築年数:</strong>
  <%= @property.building_age %>
</p>
<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>

<p><%= @closest_stations.ids.count %> 個の最寄り駅</p>

<% @closest_stations.each_with_index do |closest_station, i| %>
  <% if @property.closest_stations.any? %>
    <p>最寄り駅<%= i + 1 %></p>
    <p>
      <strong>路線:</strong>
      <%= closest_station.line %>
    </p>
    <p>
      <strong>駅名:</strong>
      <%= closest_station.station %>
    </p>
    <p>
      <strong>徒歩分数:</strong>
      <%= closest_station.walking_time %>
    </p>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
